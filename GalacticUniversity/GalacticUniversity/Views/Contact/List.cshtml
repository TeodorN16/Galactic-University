@model IEnumerable<GalacticUniversity.Models.Feedback>

@{
    ViewData["Title"] = "Feedback Management";
    Layout = "_Layout";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-color: #6366f1;
        --primary-hover: #4f46e5;
        --secondary-color: #2d3748;
        --accent-color: #8b5cf6;
        --success-color: #10b981;
        --light-color: #f3f4f6;
        --dark-color: #1f2937;
        --warning-color: #fbbf24;
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    body {
        background-color: #f8f9fa;
        color: var(--secondary-color);
        font-family: 'Poppins', sans-serif;
    }

    .about-header {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 16px;
        padding: 60px 40px;
        margin-bottom: 40px;
        color: white;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

        .about-header::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyMDAgMjAwIj48cGF0aCBmaWxsPSIjZmZmZmZmIiBmaWxsLW9wYWNpdHk9IjAuMSIgZD0iTTEwMCwxMDBjMC01NS4yLDQ0LjgtMTAwLDEwMC0xMDBoMTAwdjEwMGMwLDU1LjItNDQuOCwxMDAtMTAwLDEwMGgtMTAwVjEwMHoiLz48L3N2Zz4=');
            background-position: top right;
            background-repeat: no-repeat;
            background-size: 50%;
            opacity: 0.2;
            z-index: 0;
        }

    .about-header-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
    }

        .about-header-content h1.display-4 {
            font-size: 3.5rem;
            line-height: 1.2;
            margin-bottom: 1rem;
        }

        .about-header-content p.fs-5 {
            font-size: 1.25rem;
            line-height: 1.5;
        }

    /* Star Animation */
    .galaxy-animation {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 0;
    }

    .star {
        position: absolute;
        width: 2px;
        height: 2px;
        background: white;
        border-radius: 50%;
        animation: twinkle 2s infinite;
    }

    @@keyframes twinkle {
        0% {
            opacity: 0.2;
        }

        50% {
            opacity: 1;
        }

        100% {
            opacity: 0.2;
        }
    }

    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 25px;
        font-weight: 700;
        color: var(--secondary-color);
    }

        .section-title::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -8px;
            width: 50px;
            height: 4px;
            background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            border-radius: 2px;
        }

    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .feedback-card {
        background-color: white;
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        position: relative;
    }

        .feedback-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

    .feedback-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid #e5e7eb;
    }

    .user-info {
        display: flex;
        align-items: center;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        margin-right: 15px;
    }

    .user-details h5 {
        margin-bottom: 0;
        font-weight: 600;
    }

    .user-details p {
        margin-bottom: 0;
        color: #6b7280;
        font-size: 0.875rem;
    }

    .feedback-date {
        color: #6b7280;
        font-size: 0.875rem;
    }

    .feedback-content {
        color: #4b5563;
        line-height: 1.6;
    }

    .action-btn {
        margin-top: 15px;
        display: flex;
        justify-content: flex-end;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.25);
        }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.25);
        }

    .btn-success {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.25);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #6B7280 0%, #4B5563 100%);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(107, 114, 128, 0.25);
        }

    .btn-sm {
        padding: 8px 16px;
        font-size: 0.875rem;
    }

    .delete-btn {
        color: #ef4444;
        background-color: rgba(239, 68, 68, 0.1);
        border: none;
        padding: 8px 12px;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
    }

        .delete-btn:hover {
            background-color: rgba(239, 68, 68, 0.2);
            transform: translateY(-2px);
        }

        .delete-btn i {
            margin-right: 5px;
        }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background-color: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

        .empty-state i {
            font-size: 60px;
            color: #d1d5db;
            margin-bottom: 20px;
        }

        .empty-state h4 {
            color: #4b5563;
            margin-bottom: 10px;
        }

        .empty-state p {
            color: #6b7280;
            max-width: 500px;
            margin: 0 auto;
        }

    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    .page-item.active .page-link {
        background-color: #6366f1;
        border-color: #6366f1;
    }

    .page-link {
        color: #6366f1;
    }

    .modal-content {
        border-radius: 16px;
        border: none;
        overflow: hidden;
    }

    .modal-header {
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        border-bottom: 1px solid #e5e7eb;
    }

    .modal-title {
        color: var(--secondary-color);
        font-weight: 600;
    }

    .modal-footer {
        border-top: 1px solid #e5e7eb;
    }

    .alert-info {
        background-color: rgba(99, 102, 241, 0.1);
        color: var(--secondary-color);
        border: none;
        border-radius: 8px;
        padding: 20px;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .admin-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .about-header-content h1.display-4 {
            font-size: 2.5rem;
        }
    }
</style>

<div class="container mt-5 mb-5">
    <!-- Header section -->
    <div class="about-header">
        <div class="galaxy-animation" id="stars-container"></div>
        <div class="about-header-content">
            <h1 class="display-4 fw-bold mb-4">Feedback Management</h1>
            <p class="fs-5 mb-0">Review and manage user feedback from across the galaxy</p>
        </div>
    </div>

    <!-- Admin section header -->
    <div class="admin-header">
        <h2 class="section-title">User Feedback</h2>
    </div>

    <!-- Feedback List -->
    <div class="row">
        <div class="col-12">
            @if (Model.Any())
            {
                @foreach (var feedback in Model)
                {
                    <div class="feedback-card">
                        <div class="feedback-header">
                            <div class="user-info">
                                <div class="user-avatar">
                                    @feedback.UserName.Substring(0, 1).ToUpper()
                                </div>
                                <div class="user-details">
                                    <h5>@feedback.UserName</h5>
                                    <p>@feedback.Email</p>
                                </div>
                            </div>
                            <div class="feedback-date">
                                <i class="bi bi-calendar3"></i> @feedback.CreatedAt.ToString("MMM dd, yyyy - hh:mm tt")
                            </div>
                        </div>
                        <div class="feedback-content">
                            <p>@feedback.Text</p>
                        </div>
                        <div class="action-btn">
                            <form asp-action="Delete" asp-route-id="@feedback.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="delete-btn">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-chat-square-text"></i>
                    <h4>No Feedback Yet</h4>
                    <p>There are no feedback submissions from users yet. Check back later or encourage your users to provide feedback.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Create twinkling stars in the header
        const starsContainer = document.getElementById('stars-container');
        const starCount = 100;

        for (let i = 0; i < starCount; i++) {
            const star = document.createElement('div');
            star.className = 'star';
            star.style.top = `${Math.random() * 100}%`;
            star.style.left = `${Math.random() * 100}%`;
            star.style.animationDelay = `${Math.random() * 2}s`;
            starsContainer.appendChild(star);
        }
    });
</script>
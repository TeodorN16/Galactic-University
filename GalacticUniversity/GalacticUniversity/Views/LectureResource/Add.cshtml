@model GalacticUniversity.Models.ViewModels.LectureResourceQueryViewModel

<div class="container mt-4">
    <h2>Add Resource</h2>
    <form method="post" class="mt-3">
        <!-- Resource Type -->
        <div class="mb-3">
            <label asp-for="ResourceType" class="form-label">Resource Type</label>
            <input type="text" asp-for="ResourceType" class="form-control" />
        </div>

        <!-- Resource Path -->
        <div class="mb-3">
            <label asp-for="ResourcePath" class="form-label">Resource Path</label>
            <input type="text" asp-for="ResourcePath" class="form-control" />
        </div>

        <!-- Lecture Dropdown -->
        <div class="mb-3">
            <label class="form-label">Lecture</label>
            <!-- Use asp-items to bind the SelectListItem collection passed via the Model -->
            <select asp-for="LectureId" asp-items="Model.Lectures" class="form-control">
                <option value="">Choose a lecture</option>
            </select>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-success">Add Resource</button>
    </form>
</div>

@model GalacticUniversity.Models.ViewModels.LectureResource.LectureResourceQueryViewModel

<div class="container mt-4">
    <h2>Add Resource</h2>
    <form method="post" enctype="multipart/form-data" class="mt-3">
        <!-- File Upload -->
        <div class="mb-3">
            <label class="form-label font-weight-bold">Upload File</label>
            <input type="file" class="form-control" id="File" name="File" accept="image/*,.pdf,.doc,.docx" onchange="previewFile(event)" />
            <img id="imagePreview" class="mt-2" style="max-width: 200px; display: none;" />
        </div>

        <!-- Optional File URL Input -->
        <div class="mb-3">
            <label class="form-label font-weight-bold">Or Enter File URL</label>
            <input type="text" class="form-control" id="FileUrl" name="FileUrl" placeholder="Enter file URL" oninput="disableFileUpload()" />
        </div>

        <!-- Lecture Dropdown -->
        <div class="mb-3">
            <label class="form-label">Lecture</label>
            <select asp-for="LectureId" asp-items="Model.Lectures" class="form-control">
                <option value="">Choose a lecture</option>
            </select>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-success">Add Resource</button>
    </form>
</div>
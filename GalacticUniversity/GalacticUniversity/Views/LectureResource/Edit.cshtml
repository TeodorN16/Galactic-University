@model GalacticUniversity.Models.LectureResource

<div class="container mt-4">
    <h2>Edit Resource</h2>
    <form method="post" class="mt-3">
        <input type="hidden" asp-for="ResourceID" />
        <div class="mb-3">
            <label asp-for="ResourceType" class="form-label">Resource Type</label>
            <input type="text" asp-for="ResourceType" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ResourcePath" class="form-label">Resource Path</label>
            <input type="text" asp-for="ResourcePath" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Lecture</label>
            <select asp-for="LectureID" asp-items="ViewBag.Lectures" class="form-control">
                <option value="">Choose a lecture</option>
            </select>
        </div>
        <button type="submit" class="btn btn-warning">Edit Resource</button>
    </form>
</div>

@model GalacticUniversity.Models.ViewModels.LectureResource.LectureResourceQueryViewModel

<div class="container mt-4">
    <h2>Edit Resource</h2>
    <form method="post" class="mt-3">
        <input type="hidden" asp-for="ID" />

        <div class="mb-3">
            <label class="form-label font-weight-bold">Upload Image</label>
            <input type="file" class="form-control" id="FileUrl" name="FileUrl" accept="image/*" onchange="previewImage(event)" />
            <img id="imagePreview" class="mt-2" style="max-width: 200px; display: none;" />
        </div>

        <div class="mb-3">
            <label for="ImageUrl" class="form-label font-weight-bold">Or Enter Image URL</label>
            <input type="text" class="form-control" id="FileUrl" name="FileUrl" placeholder="Enter image URL" oninput="disableFileUpload()" />
        </div>


        <div class="mb-3">
            <label asp-for="LectureId" class="form-label">Lecture</label>
            <select asp-for="LectureId" asp-items="Model.Lectures" class="form-control">
                <option value="">Choose a lecture</option>
            </select>
        </div>

        <button type="submit" class="btn btn-warning">Edit Resource</button>
    </form>
</div>

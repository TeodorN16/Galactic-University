@{
}
@model IEnumerable<GalacticUniversity.Models.Lecture>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">LectureName</th>
            <th scope="col">LectureDescription</th>
          

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
        <tr>
            <th scope="row">@item.LectureID</th>
            <td>@item.LectureName</td>
            <td>@item.Description</td>
                <td>
                    <a type="submit" class="btn btn-primary" asp-action="Edit" asp-controller="Lecture" asp-route-id="@item.LectureID">Edit</a>
                    <form asp-action="Delete" asp-controller="Lecture" asp-route-id="@item.LectureID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
          
        </tr>
        }
    </tbody>
</table>

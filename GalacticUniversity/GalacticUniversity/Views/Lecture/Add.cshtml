    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" >

    <style >
    :root {
        --primary-color: #6366f1;
        --primary-hover: #4f46e5;
        --secondary-color: #2d3748;
        --accent-color: #8b5cf6;
        --success-color: #10b981;
        --light-color: #f3f4f6;
        --dark-color: #1f2937;
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    body {
        background-color: #f8f9fa;
        color: var(--secondary-color);
        font-family: 'Poppins', sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Full viewport height */
    }

    main {
        flex: 1 0 auto; /* This will make main content take up all available space */
    }

    footer {
        flex-shrink: 0; /* Prevent footer from shrinking */
        margin-top: auto; /* Push footer to bottom when content is short */
    }

    .about-header {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 16px;
        padding: 60px 40px;
        margin-bottom: 40px;
        color: white;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

        .about-header::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyMDAgMjAwIj48cGF0aCBmaWxsPSIjZmZmZmZmIiBmaWxsLW9wYWNpdHk9IjAuMSIgZD0iTTEwMCwxMDBjMC01NS4yLDQ0LjgtMTAwLDEwMC0xMDBoMTAwdjEwMGMwLDU1LjItNDQuOCwxMDAtMTAwLDEwMGgtMTAwVjEwMHoiLz48L3N2Zz4=');
            background-position: top right;
            background-repeat: no-repeat;
            background-size: 50%;
            opacity: 0.2;
            z-index: 0;
        }

    .about-header-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
    }

        .about-header-content h1.display-4 {
            font-size: 3.5rem;
            line-height: 1.2;
            margin-bottom: 1rem;
        }

        .about-header-content p.fs-5 {
            font-size: 1.25rem;
            line-height: 1.5;
        }

    /* Star Animation */
    .galaxy-animation {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 0;
    }

    .star {
        position: absolute;
        width: 2px;
        height: 2px;
        background: white;
        border-radius: 50%;
        animation: twinkle 2s infinite;
    }

    @@keyframes twinkle {
        0% {
            opacity: 0.2;
        }

        50% {
            opacity: 1;
        }

        100% {
            opacity: 0.2;
        }
    }

    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 25px;
        font-weight: 700;
        color: var(--secondary-color);
    }

        .section-title::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -8px;
            width: 50px;
            height: 4px;
            background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            border-radius: 2px;
        }

    /* Form Styling */
    .form-card {
        background-color: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: var(--card-shadow);
        padding: 30px;
        margin-bottom: 40px;
        transition: transform 0.3s ease;
    }

        .form-card:hover {
            transform: translateY(-5px);
        }

    .form-control {
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.25);
        }

    .form-label {
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 8px;
    }

    .wave-group {
        position: relative;
    }

        .wave-group .bar {
            position: relative;
            display: block;
            width: 100%;
        }

            .wave-group .bar:before, .wave-group .bar:after {
                content: '';
                height: 2px;
                width: 0;
                bottom: 0;
                position: absolute;
                background: linear-gradient(to right, var(--primary-color), var(--accent-color));
                transition: 0.3s ease all;
                left: 0%;
            }

        .wave-group .form-control:focus ~ .bar:before, .wave-group .form-control:focus ~ .bar:after {
            width: 100%;
        }

    .btn-primary, .btn-success, .btn-secondary {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 24px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-success {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .btn-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
    }

        .btn-primary:hover, .btn-success:hover, .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.25);
        }

    .btn-success:hover {
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.25);
    }

    .btn-secondary:hover {
        box-shadow: 0 4px 12px rgba(108, 117, 125, 0.25);
    }

    /* Star Rating Styling */
    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }

        .star-rating .star-label {
            color: #ddd;
            font-size: 1.75rem;
            cursor: pointer;
            transition: color 0.3s;
            margin-right: 10px;
        }

        .star-rating input:checked ~ label,
        .star-rating input:checked ~ label ~ label {
            color: #ffc107;
        }

        .star-rating .star-label:hover,
        .star-rating .star-label:hover ~ label {
            color: #ffc107;
        }
</style>

<main>
    <div class="container mt-5 mb-5">
        <!-- Header section -->
        <div class="about-header">
            <div class="galaxy-animation" id="stars-container"></div>
            <div class="about-header-content">
                <h1 class="display-4 fw-bold mb-4">Add New Lecture</h1>
                <p class="fs-5 mb-0">Provide details for your new lecture below</p>
            </div>
        </div>

        <!-- Form section -->
        <div class="form-card">
            <h2 class="section-title">Lecture Details</h2>
            <form method="post" class="mt-4">
                <div class="mb-4 wave-group">
                    <label asp-for="Name" class="form-label">Lecture Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter lecture name..." required />
                    <span class="bar"></span>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-4 wave-group">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of the lecture..." required></textarea>
                    <span class="bar"></span>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-4 wave-group">
                    <label asp-for="CourseID" class="form-label">Select Course</label>
                    <select asp-for="CourseID" asp-items="@Model.Courses" class="form-control" required>
                        <option value="">Choose a course</option>
                    </select>
                    <span class="bar"></span>
                    <span asp-validation-for="CourseID" class="text-danger"></span>
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Add Lecture
                    </button>
                    <a asp-action="Index" asp-controller="Lecture" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Lectures
                    </a>
                </div>
            </form>
        </div>
    </div>
</main>

<script>
    // Create stars animation for the galaxy background
    document.addEventListener('DOMContentLoaded', function () {
        const starsContainer = document.getElementById('stars-container');
        const starsCount = 50;

        for (let i = 0; i < starsCount; i++) {
            const star = document.createElement('div');
            star.classList.add('star');

            // Random position
            star.style.left = `${Math.random() * 100}%`;
            star.style.top = `${Math.random() * 100}%`;

            // Random size
            const size = Math.random() * 3 + 1;
            star.style.width = `${size}px`;
            star.style.height = `${size}px`;

            // Random animation delay
            star.style.animationDelay = `${Math.random() * 2}s`;

            starsContainer.appendChild(star);
        }
    });
</script>

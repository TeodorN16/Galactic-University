@model GalacticUniversity.Models.ViewModels.CourseQueryViewModel

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-color: #6366f1;
        --primary-hover: #4f46e5;
        --secondary-color: #2d3748;
        --accent-color: #8b5cf6;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --light-color: #f3f4f6;
        --dark-color: #1f2937;
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    body {
        background-color: #f8f9fa;
        color: var(--secondary-color);
        font-family: 'Poppins', sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Full viewport height */
    }

    main {
        flex: 1 0 auto; /* This will make main content take up all available space */
    }

    .about-header {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 16px;
        padding: 60px 40px;
        margin-bottom: 40px;
        color: white;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

        .about-header::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyMDAgMjAwIj48cGF0aCBmaWxsPSIjZmZmZmZmIiBmaWxsLW9wYWNpdHk9IjAuMSIgZD0iTTEwMCwxMDBjMC01NS4yLDQ0LjgtMTAwLDEwMC0xMDBoMTAwdjEwMGMwLDU1LjItNDQuOCwxMDAtMTAwLDEwMGgtMTAwVjEwMHoiLz48L3N2Zz4=');
            background-position: top right;
            background-repeat: no-repeat;
            background-size: 50%;
            opacity: 0.2;
            z-index: 0;
        }

    .about-header-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
    }

        .about-header-content h1.display-4 {
            font-size: 3.5rem;
            line-height: 1.2;
            margin-bottom: 1rem;
        }

        .about-header-content p.fs-5 {
            font-size: 1.25rem;
            line-height: 1.5;
        }

    /* Star Animation */
    .galaxy-animation {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 0;
    }

    .star {
        position: absolute;
        width: 2px;
        height: 2px;
        background: white;
        border-radius: 50%;
        animation: twinkle 2s infinite;
    }

    @@keyframes twinkle {
        0%

    {
        opacity: 0.2;
    }

    50% {
        opacity: 1;
    }

    100% {
        opacity: 0.2;
    }

    }

    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 25px;
        font-weight: 700;
        color: var(--secondary-color);
    }

        .section-title::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -8px;
            width: 50px;
            height: 4px;
            background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            border-radius: 2px;
        }

    /* Form Styling */
    .form-card {
        background-color: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: var(--card-shadow);
        padding: 30px;
        margin-bottom: 40px;
        transition: transform 0.3s ease;
    }

        .form-card:hover {
            transform: translateY(-5px);
        }

    .form-control {
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.25);
        }

    .form-label {
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 8px;
    }

    .wave-group {
        position: relative;
    }

        .wave-group .bar {
            position: relative;
            display: block;
            width: 100%;
        }

            .wave-group .bar:before, .wave-group .bar:after {
                content: '';
                height: 2px;
                width: 0;
                bottom: 0;
                position: absolute;
                background: linear-gradient(to right, var(--primary-color), var(--accent-color));
                transition: 0.3s ease all;
                left: 0%;
            }

        .wave-group .form-control:focus ~ .bar:before, .wave-group .form-control:focus ~ .bar:after {
            width: 100%;
        }

    .btn {
        border: none;
        border-radius: 8px;
        padding: 12px 24px;
        font-weight: 600;
        transition: all 0.3s ease;
        color: white;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    }

    .btn:hover {
        transform: translateY(-2px);
    }

    .btn-primary:hover {
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.25);
    }

    .btn-warning:hover {
        box-shadow: 0 4px 12px rgba(245, 158, 11, 0.25);
    }

    /* Custom styling for form elements */
    textarea.form-control {
        min-height: 120px;
    }

    /* Form sections */
    .form-section {
        border-bottom: 1px solid #f3f4f6;
        padding-bottom: 20px;
        margin-bottom: 20px;
    }

    .form-section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 15px;
    }

    /* Date inputs styling */
    input[type="date"].form-control {
        appearance: none;
        padding: 12px 16px;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .about-header-content h1.display-4

    {
        font-size: 2.5rem;
    }

    }
</style>

<main>
    <div class="container mt-5 mb-5">
        <!-- Header section -->
        <div class="about-header">
            <div class="galaxy-animation" id="stars-container"></div>
            <div class="about-header-content">
                <h1 class="display-4 fw-bold mb-4">Edit Course</h1>
                <p class="fs-5 mb-0">Update the details of your educational offering</p>
            </div>
        </div>

        <!-- Form section -->
        <div class="form-card">
            <h2 class="section-title">Course Details</h2>
            <form method="post" asp-action="Edit" enctype="multipart/form-data" class="mt-4">
                <input type="hidden" asp-for="ID" />

                <!-- Basic Information Section -->
                <div class="form-section">
                    <h3 class="form-section-title"><i class="bi bi-info-circle me-2"></i>Basic Information</h3>

                    <div class="mb-4 wave-group">
                        <label asp-for="CourseName" class="form-label">Course Name</label>
                        <input type="text" asp-for="CourseName" class="form-control" placeholder="Enter course name">
                        <span class="bar"></span>
                        <span asp-validation-for="CourseName" class="text-danger"></span>
                    </div>

                    <div class="mb-4 wave-group">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" placeholder="Provide a detailed description of the course content and objectives"></textarea>
                        <span class="bar"></span>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-4 wave-group">
                        <label asp-for="CategoryID" class="form-label">Category</label>
                        <select asp-for="CategoryID" asp-items="@Model.Categories" class="form-control">
                            <option value="">Choose a category</option>
                        </select>
                        <span class="bar"></span>
                        <span asp-validation-for="CategoryID" class="text-danger"></span>
                    </div>
                </div>

                <!-- Schedule Section -->
                <div class="form-section">
                    <h3 class="form-section-title"><i class="bi bi-calendar-event me-2"></i>Schedule</h3>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4 wave-group">
                                <label asp-for="StartDate" class="form-label">Start Date</label>
                                <input type="date" asp-for="StartDate" class="form-control">
                                <span class="bar"></span>
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-4 wave-group">
                                <label asp-for="EndDate" class="form-label">End Date</label>
                                <input type="date" asp-for="EndDate" class="form-control">
                                <span class="bar"></span>
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Image Upload Section -->
                <div class="form-section">
                    <h3 class="form-section-title"><i class="bi bi-image me-2"></i>Course Image</h3>

                    @if (!string.IsNullOrEmpty(Model.ImageURL))
                    {
                        <div class="mb-3">
                            <label class="form-label">Current Image</label>
                            <div class="current-image-container p-2 border rounded">
                                <img src="@Model.ImageURL" alt="Current course image" class="img-fluid rounded" style="max-height: 200px;">
                            </div>
                        </div>
                    }

                    <div class="mb-4">
                        <label class="form-label">Upload New Image</label>
                        <input type="file" class="form-control" id="ImageFile" name="Image" accept="image/*" onchange="previewImage(event)">
                        <div class="image-preview-container mt-3">
                            <img id="imagePreview" class="mt-2" style="max-width: 200px; display: none;">
                            <p id="dragText" class="text-muted mb-0 mt-2">Preview will appear here</p>
                        </div>
                    </div>

                    <div class="mb-4 wave-group">
                        <label for="ImageUrl" class="form-label">Or Enter Image URL</label>
                        <input type="text" class="form-control" id="ImageUrl" name="ImageURL" asp-for="ImageURL" placeholder="https://example.com/image.jpg" oninput="disableFileUpload()">
                        <span class="bar"></span>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="d-flex gap-3 mt-4">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-pencil-square me-2"></i>Save Changes
                    </button>
                    <a asp-controller="Course" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Courses
                    </a>
                </div>
            </form>
        </div>
    </div>
</main>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Create twinkling stars in the header
        const starsContainer = document.getElementById('stars-container');
        const starCount = 100;

        for (let i = 0; i < starCount; i++) {
            const star = document.createElement('div');
            star.className = 'star';
            star.style.top = `${Math.random() * 100}%`;
            star.style.left = `${Math.random() * 100}%`;
            star.style.animationDelay = `${Math.random() * 2}s`;
            starsContainer.appendChild(star);
        }
    });

    // Image preview functionality
    function previewImage(event) {
        const imagePreview = document.getElementById('imagePreview');
        const dragText = document.getElementById('dragText');
        const imageUrl = document.getElementById('ImageUrl');

        // Clear the URL field when uploading a file
        imageUrl.value = '';

        if (event.target.files && event.target.files[0]) {
            const reader = new FileReader();

            reader.onload = function(e) {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
                dragText.style.display = 'none';
            }

            reader.readAsDataURL(event.target.files[0]);
        }
    }

    // Disable file upload when URL is entered
    function disableFileUpload() {
        const imageFile = document.getElementById('ImageFile');
        const imagePreview = document.getElementById('imagePreview');
        const dragText = document.getElementById('dragText');
        const imageUrl = document.getElementById('ImageUrl');

        if (imageUrl.value.trim() !== '') {
            imageFile.value = '';
            imageFile.disabled = true;
            imagePreview.style.display = 'none';
            dragText.style.display = 'block';
        } else {
            imageFile.disabled = false;
        }
    }
</script>
@{
}
@model GalacticUniversity.Models.Course

<form method="post">
    <input type="hidden" asp-for="CourseID" />
    <label asp-for="CourseName">
        <input type="text" asp-for="CourseName" />
    </label>
    <label asp-for="Description">
        <input type="text" asp-for="Description" />
    </label>
    <label asp-for="StartDate">
        <input type="datetime-local" asp-for="StartDate" />
    </label>
    <label asp-for="EndDate">
        <input type="datetime-local" asp-for="EndDate" />
    </label>
    <label>Category
        <select asp-for="CategoryID" asp-items="ViewBag.Categories">
            <option value="">Choose a category</option>
        </select>
    </label>
    <button type="submit" asp-action="Edit" asp-controller="Course">Edit Course</button>

</form>
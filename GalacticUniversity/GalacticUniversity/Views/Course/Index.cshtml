@model GalacticUniversity.Models.ViewModels.CourseViewModel


<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-color: #6366f1;
        --primary-hover: #4f46e5;
        --secondary-color: #2d3748;
        --accent-color: #8b5cf6;
        --success-color: #10b981;
        --light-color: #f3f4f6;
        --dark-color: #1f2937;
        --warning-color: #fbbf24;
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    body {
        background-color: #f8f9fa;
        color: var(--secondary-color);
        font-family: 'Poppins', sans-serif;
    }

    .about-header {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 16px;
        padding: 60px 40px;
        margin-bottom: 40px;
        color: white;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

        .about-header::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyMDAgMjAwIj48cGF0aCBmaWxsPSIjZmZmZmZmIiBmaWxsLW9wYWNpdHk9IjAuMSIgZD0iTTEwMCwxMDBjMC01NS4yLDQ0LjgtMTAwLDEwMC0xMDBoMTAwdjEwMGMwLDU1LjItNDQuOCwxMDAtMTAwLDEwMGgtMTAwVjEwMHoiLz48L3N2Zz4=');
            background-position: top right;
            background-repeat: no-repeat;
            background-size: 50%;
            opacity: 0.2;
            z-index: 0;
        }

    .about-header-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
    }

        .about-header-content h1.display-4 {
            font-size: 3.5rem;
            line-height: 1.2;
            margin-bottom: 1rem;
        }

        .about-header-content p.fs-5 {
            font-size: 1.25rem;
            line-height: 1.5;
        }

    /* Star Animation */
    .galaxy-animation {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 0;
    }

    .star {
        position: absolute;
        width: 2px;
        height: 2px;
        background: white;
        border-radius: 50%;
        animation: twinkle 2s infinite;
    }

    @@keyframes twinkle {
        0%

    {
        opacity: 0.2;
    }

    50% {
        opacity: 1;
    }

    100% {
        opacity: 0.2;
    }

    }

    .filter-container {
        background-color: white;
        border-radius: 16px;
        padding: 25px;
        margin-bottom: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

    .filter-form {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        align-items: flex-end;
    }

    .filter-group {
        flex: 1;
        min-width: 200px;
    }

    .form-label {
        font-weight: 500;
        color: var(--secondary-color);
        margin-bottom: 8px;
        display: block;
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 10px 15px;
        border: 1px solid #e5e7eb;
        transition: all 0.3s ease;
        width: 100%;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
        }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.25);
        }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.25);
        }

    .btn-success {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.25);
        }

    /* Added from first document */
    .btn-sm {
        padding: 8px 16px;
        font-size: 0.875rem;
    }

    .btn-group {
        display: flex;
        gap: 5px;
    }

    .alert-info {
        background-color: rgba(99, 102, 241, 0.1);
        color: var(--secondary-color);
        border: none;
        border-radius: 8px;
        padding: 20px;
    }

    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 25px;
        font-weight: 700;
        color: var(--secondary-color);
    }

        .section-title::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -8px;
            width: 50px;
            height: 4px;
            background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            border-radius: 2px;
        }

    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    /* Admin Table Styling */
    .admin-table-container {
        background-color: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
    }

    .table {
        margin-bottom: 0;
        width: 100%;
    }

        .table thead {
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        }

            .table thead th {
                font-weight: 600;
                color: var(--secondary-color);
                padding: 15px;
                border-bottom: 2px solid #e5e7eb;
            }

        .table tbody td, .table tbody th {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid #f3f4f6;
        }

        .table tbody tr:last-child td, .table tbody tr:last-child th {
            border-bottom: none;
        }

        .table tbody tr:hover {
            background-color: #f9fafb;
        }

    /* Course Cards Styling */
    .cards-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 30px;
        margin-top: 30px;
    }

    .card {
        background-color: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: var(--card-shadow);
        }

        .card .image {
            height: 200px;
            background-size: cover;
            background-position: center;
        }

        .card .content {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .card .title {
            color: var(--primary-color);
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 10px;
            display: block;
        }

        .card .desc {
            color: #6b7280;
            flex-grow: 1;
            margin-bottom: 15px;
        }

        .card .action-btns {
            margin-top: auto;
        }

    .action-btns .btn {
        width: 100%;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .filter-form

    {
        flex-direction: column;
    }

    .filter-group {
        width: 100%;
    }

    .admin-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
    }

    .about-header-content h1.display-4 {
        font-size: 2.5rem;
    }

    }
</style>

<div class="container mt-5 mb-5">
    <!-- Header section with galaxy animation -->
    <div class="about-header">
        <div class="galaxy-animation" id="stars-container"></div>
        <div class="about-header-content">
            <h1 class="display-4 fw-bold mb-4">Our Courses</h1>
            <p class="fs-5 mb-0">Browse and discover our comprehensive course catalog</p>
        </div>
    </div>

    @* ADMIN VIEW *@
    @if (User.IsInRole("Admin"))
    {
        <div class="filter-container">
            <h2 class="section-title">Filter Courses</h2>
            <form asp-action="Index" method="get">
                <div class="filter-form">
                    <div class="filter-group">
                        <label asp-for="CategoryID" class="form-label">Category</label>
                        <select asp-for="CategoryID" asp-items="@Model.Categories" class="form-select">
                            <option value="">All Categories</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input type="date" asp-for="StartDate" class="form-control" culture="en-US" />
                    </div>

                    <div class="filter-group">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input type="date" asp-for="EndDate" class="form-control" culture="en-US" />
                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary">
                           Filter 
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="admin-header">
            <h2 class="section-title">Course Management</h2>
            <a class="btn btn-success" asp-controller="Course" asp-action="Add">
                <i class="bi bi-plus-circle me-2"></i>Add New Course
            </a>
        </div>

        <div class="admin-table-container">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Course Name</th>
                            <th>Description</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Category</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Courses)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>@item.Description</td>
                                <td>@item.StartDate.ToString("MMMM d, yyyy", new System.Globalization.CultureInfo("en-US"))</td>
                                <td>@item.EndDate.ToString("MMMM d, yyyy", new System.Globalization.CultureInfo("en-US"))</td>
                                <td>@item.Category.CategoryName</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.CourseID">
                                            <i class="bi bi-pencil me-1"></i> Edit
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@item.CourseID" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash me-1"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        @* USER VIEW *@
        <div class="filter-container">
            <h2 class="section-title">Filter Courses</h2>
            <form asp-action="Index" method="get">
                <div class="filter-form">
                    <div class="filter-group">
                        <label asp-for="CategoryID" class="form-label">Category</label>
                        <select asp-for="CategoryID" asp-items="@Model.Categories" class="form-select">
                            <option value="">All Categories</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input type="date" asp-for="StartDate" class="form-control" culture="en-US" />
                    </div>

                    <div class="filter-group">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input type="date" asp-for="EndDate" class="form-control" culture="en-US" />
                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-filter me-2"></i>Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="cards-container">
            @foreach (var item in Model.Courses)
            {
                <div class="card">
                    <div class="image" style="background-image: url('@item.ImageURL');"></div>
                    <div class="content">
                        <a href="#">
                            <span class="title">@item.CourseName</span>
                        </a>

                        <p class="desc">@item.Description</p>
                        @if (User.IsInRole("User"))
                        {
                            <div class="action-btns">
                                <a class="btn btn-primary" asp-action="Details" asp-controller="Course" asp-route-id="@item.CourseID">
                                    <i class="bi bi-info-circle me-1"></i> View Details
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        @if (!Model.Courses.Any())
        {
            <div class="alert alert-info text-center" role="alert">
                <i class="bi bi-info-circle me-2"></i>No courses available based on your filter criteria. Please adjust your filters or check back later.
            </div>
        }
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Create twinkling stars in the header
        const starsContainer = document.getElementById('stars-container');
        const starCount = 100;

        for (let i = 0; i < starCount; i++) {
            const star = document.createElement('div');
            star.className = 'star';
            star.style.top = `${Math.random() * 100}%`;
            star.style.left = `${Math.random() * 100}%`;
            star.style.animationDelay = `${Math.random() * 2}s`;
            starsContainer.appendChild(star);
        }
    });
</script>
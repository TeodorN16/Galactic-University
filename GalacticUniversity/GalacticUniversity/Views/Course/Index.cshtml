@{
}
@model IEnumerable<GalacticUniversity.Models.Course>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Course Name</th>
            <th scope="col">Category Name</th>
            <th scope="col">StartDate</th>
            <th scope="col">EndDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
        <tr>
            <th scope="row">@item.CourseID</th>
            <th>@item.CourseName</th>
            <td>@item.Category.CategoryName</td>
            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
            <td>
                <a type="submit" class="btn btn-primary" asp-action="Edit" asp-controller="Course"></a>
                    <form asp-action="Delete" asp-controller="Course" asp-route-id="@item.CourseID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
            </td>
        </tr>
        }
    </tbody>
</table>
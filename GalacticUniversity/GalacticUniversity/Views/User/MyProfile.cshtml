@model GalacticUniversity.Models.ViewModels.UserViewModels.UserViewModel

@{
    ViewData["Title"] = "My Profile";
}

<link rel="stylesheet" href="~/css/display.css" asp-append-version="true" />

<div class="container mt-4">
    <!-- User Info Header -->
    <div class="mb-5 p-4 bg-light border rounded text-center">
        <h1 class="fw-bold text-primary mb-3">My Profile</h1>
        @if (Model != null)
        {
            <div class="d-flex justify-content-center">
                <div class="px-4 border-end">
                    <h5 class="text-muted">Email</h5>
                    <p class="text-dark mb-0">@(Model.Email ?? "N/A")</p>
                </div>
                <div class="px-4">
                    <h5 class="text-muted">User ID</h5>
                    <p class="text-dark mb-0">@(Model.Id ?? "N/A")</p>
                </div>
            </div>
        }
        else
        {
            <p class="text-danger">Error: User data is not available.</p>
        }
    </div>

    <!-- My Courses Section -->
    <h2 class="text-secondary mb-4">My Courses</h2>

    @if (Model?.Courses != null && Model.Courses.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var course in Model.Courses)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title text-primary">@(course?.CourseName ?? "Unnamed Course")</h4>
                            <p class="card-text">@(course?.Description ?? "No description available.")</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-info text-dark">@(course?.Lectures?.Count ?? 0) Lectures</span>
                                <a asp-action="User" asp-controller="Learn" asp-route-id="@course.CourseID" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#courseModal-@(course.CourseID)">Learn</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal for this course -->
                <div class="modal fade" id="courseModal-@(course.CourseID)" tabindex="-1" aria-labelledby="courseModalLabel-@(course.CourseID)" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="courseModalLabel-@(course.CourseID)">@(course?.CourseName ?? "Unnamed Course")</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>@(course?.Description ?? "No description available.")</p>

                                @if (course?.Lectures != null && course.Lectures.Any())
                                {
                                    <div class="accordion" id="accordion-course-@(course.CourseID)">
                                        @foreach (var lecture in course.Lectures)
                                        {
                                            var lectureId = lecture.LectureID;
                                            var headingId = $"heading-{lectureId}";
                                            var collapseId = $"collapse-{lectureId}";
                                            <div class="accordion-item border mb-3">
                                                <h2 class="accordion-header" id="@headingId">
                                                    <button class="accordion-button collapsed" type="button"
                                                            data-bs-toggle="collapse"
                                                            data-bs-target="#@collapseId"
                                                            aria-expanded="false"
                                                            aria-controls="@collapseId">
                                                        <span class="me-2">@(lecture?.LectureName ?? "Unnamed Lecture")</span>
                                                        <i class="bi bi-unlock-fill text-success"></i>
                                                    </button>
                                                </h2>
                                                <div id="@collapseId" class="accordion-collapse collapse"
                                                     aria-labelledby="@headingId" data-bs-parent="#accordion-course-@(course.CourseID)">
                                                    <div class="accordion-body">
                                                        @if (lecture?.LectureResources != null && lecture.LectureResources.Any())
                                                        {
                                                            <ul class="list-group list-group-flush">
                                                                @foreach (var resource in lecture.LectureResources)
                                                                {
                                                                    <li class="list-group-item">
                                                                        @if (!string.IsNullOrEmpty(resource?.FileUrl) && resource.FileUrl.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                                                                        {
                                                                            <div class="embed-responsive embed-responsive-16by9 mb-3">
                                                                                <iframe class="embed-responsive-item"
                                                                                        src="@resource.FileUrl"
                                                                                        style="width: 100%; height: 300px; border: none;"
                                                                                        title="Lecture Resource PDF"></iframe>
                                                                            </div>
                                                                            <a href="@resource.FileUrl" target="_blank" class="btn btn-link btn-sm">Open in New Tab</a>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="text-muted">No PDF available.</span>
                                                                        }
                                                                    </li>
                                                                }
                                                            </ul>
                                                        }
                                                        else
                                                        {
                                                            <p class="text-muted">No resources available for this lecture.</p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted">No lectures available for this course.</p>
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            You are not enrolled in any courses yet, or course data is unavailable.
        </div>
    }
</div>

<!-- Footer -->
<footer class="footer-full mt-5">
    <div class="footer-left">
        <div class="astronaut">
            <div class="head"></div>
            <div class="arm arm-left"></div>
            <div class="arm arm-right"></div>
            <div class="body">
                <div class="panel"></div>
            </div>
            <div class="leg leg-left"></div>
            <div class="leg leg-right"></div>
            <div class="schoolbag"></div>
        </div>
    </div>
    <div class="footer-right">
        <p>© 2025 GalacticUniversity. All rights reserved.</p>
        <div>
            <a href="#">Privacy Policy</a>
            <a href="#">Terms of Service</a>
            <a href="#">Contact</a>
        </div>
    </div>
</footer>


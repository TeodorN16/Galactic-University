@model GalacticUniversity.Models.ViewModels.UserViewModels.UserViewModel

@{
    ViewData["Title"] = "My Profile";
}

<link rel="stylesheet" href="~/css/display.css" asp-append-version="true" />

<div class="container mt-4">
    <!-- User Info Header -->
    <div class="mb-5 p-4 bg-light border rounded text-center">
        <h1 class="fw-bold text-primary mb-3">My Profile</h1>
        @if (Model != null)
        {
            <div class="d-flex justify-content-center">
                <div class="px-4 border-end">
                    <h5 class="text-muted">Email</h5>
                    <p class="text-dark mb-0">@(Model.Email ?? "N/A")</p>
                </div>
                <div class="px-4">
                    <h5 class="text-muted">User ID</h5>
                    <p class="text-dark mb-0">@(Model.Id ?? "N/A")</p>
                </div>
            </div>
        }
        else
        {
            <p class="text-danger">Error: User data is not available.</p>
        }
    </div>

    <!-- My Courses Section -->
    <h2 class="text-secondary mb-4">My Courses</h2>

    @if (Model?.Courses != null && Model.Courses.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var course in Model.Courses)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title text-primary">@(course?.CourseName ?? "Unnamed Course")</h4>
                            <p class="card-text">@(course?.Description ?? "No description available.")</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-info text-dark">@(course?.Lectures?.Count ?? 0) Lectures</span>
                                <a asp-action="Learn" asp-controller="User" asp-route-id="@course.CourseID" class="btn btn-primary" >Learn</a>
                            </div>
                        </div>
                    </div>
                </div>

                

            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            You are not enrolled in any courses yet, or course data is unavailable.
        </div>
    }
</div>

<!-- Footer -->
<footer class="footer-full mt-5">
    <div class="footer-left">
        <div class="astronaut">
            <div class="head"></div>
            <div class="arm arm-left"></div>
            <div class="arm arm-right"></div>
            <div class="body">
                <div class="panel"></div>
            </div>
            <div class="leg leg-left"></div>
            <div class="leg leg-right"></div>
            <div class="schoolbag"></div>
        </div>
    </div>
    <div class="footer-right">
        <p>© 2025 GalacticUniversity. All rights reserved.</p>
        <div>
            <a href="#">Privacy Policy</a>
            <a href="#">Terms of Service</a>
            <a href="#">Contact</a>
        </div>
    </div>
</footer>

<!-- Bootstrap CSS and JS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
@model GalacticUniversity.Models.ViewModels.UserViewModels.UserViewModel
@{
    ViewData["Title"] = "My Galactic Dashboard";
}

<!-- Custom styles -->
<style>
    :root {
        --primary-color: #6366f1;
        --primary-hover: #4f46e5;
        --secondary-color: #2d3748;
        --accent-color: #8b5cf6;
        --success-color: #10b981;
        --info-color: #3b82f6;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --light-color: #f3f4f6;
        --dark-color: #1f2937;
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    body {
        background-color: #f8f9fa;
        color: var(--secondary-color);
        font-family: 'Poppins', sans-serif;
    }

    .profile-header {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 16px;
        padding: 40px 30px;
        margin-bottom: 40px;
        color: white;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

        .profile-header::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyMDAgMjAwIj48cGF0aCBmaWxsPSIjZmZmZmZmIiBmaWxsLW9wYWNpdHk9IjAuMSIgZD0iTTEwMCwxMDBjMC01NS4yLDQ0LjgtMTAwLDEwMC0xMDBoMTAwdjEwMGMwLDU1LjItNDQuOCwxMDAtMTAwLDEwMGgtMTAwVjEwMHoiLz48L3N2Zz4=');
            background-position: top right;
            background-repeat: no-repeat;
            background-size: 50%;
            opacity: 0.2;
            z-index: 0;
        }

    .profile-header-content {
        position: relative;
        z-index: 1;
    }

    .profile-stats-card {
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        padding: 15px 20px;
        backdrop-filter: blur(5px);
        transition: transform 0.3s ease;
    }

        .profile-stats-card:hover {
            transform: translateY(-5px);
        }

    .course-card {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

        .course-card:hover {
            transform: translateY(-10px);
            box-shadow: var(--card-shadow);
        }

        .course-card .card-body {
            padding: 25px;
        }

        .course-card .card-title {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 15px;
        }

    .course-header {
        height: 100px;
        background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
        position: relative;
        overflow: hidden;
    }

        .course-header::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyMDAgMjAwIj48cGF0aCBmaWxsPSIjZmZmZmZmIiBmaWxsLW9wYWNpdHk9IjAuMiIgZD0iTTAsMGgxMDB2MTAwSDBWMHoiLz48L3N2Zz4=');
            opacity: 0.3;
        }

    .course-icon {
        position: absolute;
        bottom: -30px;
        left: 25px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        z-index: 1;
    }

        .course-icon i {
            font-size: 28px;
            color: var(--primary-color);
        }

    .course-badge {
        padding: 8px 15px;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.85rem;
    }

    .learn-btn {
        background-color: var(--primary-color);
        color: white;
        border-radius: 50px;
        padding: 8px 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
    }

        .learn-btn:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
        }

    .empty-courses {
        background-color: white;
        border-radius: 16px;
        padding: 30px;
        text-align: center;
        box-shadow: var(--card-shadow);
    }

    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 30px;
        font-weight: 700;
        color: var(--secondary-color);
    }

        .section-title::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -10px;
            width: 50px;
            height: 4px;
            background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            border-radius: 2px;
        }

    /* Responsive adjustments */
    

    {
        padding: 25px 20px;
    }

    .course-icon {
        width: 50px;
        height: 50px;
        bottom: -25px;
    }

        .course-icon i {
            font-size: 22px;
        }

    }
</style>

<!-- Google Fonts - Poppins -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<div class="container mt-5">
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="profile-header-content">
            <h1 class="display-5 fw-bold mb-4">My Galactic Dashboard</h1>
            @if (Model != null)
            {
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="profile-stats-card">
                            <h5 class="mb-2 fw-normal text-white-50">Email Address</h5>
                            <h4 class="mb-0 fw-bold">@(Model.Email ?? "N/A")</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="profile-stats-card">
                            <h5 class="mb-2 fw-normal text-white-50">Student ID</h5>
                            <h4 class="mb-0 fw-bold">@(Model.UserName ?? "N/A")</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="profile-stats-card">
                            <h5 class="mb-2 fw-normal text-white-50">Enrolled Courses</h5>
                            <h4 class="mb-0 fw-bold">@(Model.Courses?.Count ?? 0)</h4>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Error: User data is not available.
                </div>
            }
        </div>
    </div>

    <!-- My Courses Section -->
    <h2 class="section-title">My Learning Journey</h2>
    @if (Model?.Courses != null && Model.Courses.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var course in Model.Courses)
            {
                <div class="col">
                    <div class="course-card card h-100">
                        <div class="course-header">
                            <div class="course-icon">
                                <i class="bi bi-book"></i>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column pt-4 mt-3">
                            <h4 class="card-title">@(course?.CourseName ?? "Unnamed Course")</h4>
                            <p class="card-text flex-grow-1 text-muted">@(course?.Description ?? "No description available.")</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="course-badge bg-info bg-opacity-10 text-info">
                                    <i class="bi bi-collection me-1"></i>
                                    @(course?.Lectures?.Count ?? 0) Lectures
                                </span>
                                <a asp-action="Learn" asp-controller="User" asp-route-id="@course.CourseID"
                                   class="learn-btn">
                                    <i class="bi bi-rocket me-1"></i> Launch
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-courses">
            <img src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/icons/journal-richtext.svg"
                 alt="No courses" width="80" height="80" class="mb-4 text-muted">
            <h4 class="mb-3">No Courses Yet</h4>
            <p class="text-muted mb-4">You are not enrolled in any courses yet, or course data is unavailable.</p>
            <a href="#" class="btn btn-primary px-4 py-2 rounded-pill">
                <i class="bi bi-search me-2"></i>Browse Courses
            </a>
        </div>
    }
</div>

<!-- Original Footer -->
<footer class="footer-full mt-5">
    <div class="footer-left">
        <div class="astronaut">
            <div class="head"></div>
            <div class="arm arm-left"></div>
            <div class="arm arm-right"></div>
            <div class="body">
                <div class="panel"></div>
            </div>
            <div class="leg leg-left"></div>
            <div class="leg leg-right"></div>
            <div class="schoolbag"></div>
        </div>
    </div>
    <div class="footer-right">
        <p>© 2025 GalacticUniversity. All rights reserved.</p>
        <div>
            <a href="#">Privacy Policy</a>
            <a href="#">Terms of Service</a>
            <a href="#">Contact</a>
        </div>
    </div>
</footer>


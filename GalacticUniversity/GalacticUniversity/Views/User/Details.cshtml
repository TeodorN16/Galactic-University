@model GalacticUniversity.Models.ViewModels.UserViewModels.UserDetailsViewModel

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-color: #6366f1;
        --primary-hover: #4f46e5;
        --secondary-color: #2d3748;
        --accent-color: #8b5cf6;
        --success-color: #10b981;
        --light-color: #f3f4f6;
        --dark-color: #1f2937;
        --warning-color: #fbbf24;
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    body {
        background-color: #f8f9fa;
        color: var(--secondary-color);
        font-family: 'Poppins', sans-serif;
    }

    .about-header {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 16px;
        padding: 60px 40px;
        margin-bottom: 40px;
        color: white;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

        .about-header::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyMDAgMjAwIj48cGF0aCBmaWxsPSIjZmZmZmZmIiBmaWxsLW9wYWNpdHk9IjAuMSIgZD0iTTEwMCwxMDBjMC01NS4yLDQ0LjgtMTAwLDEwMC0xMDBoMTAwdjEwMGMwLDU1LjItNDQuOCwxMDAtMTAwLDEwMGgtMTAwVjEwMHoiLz48L3N2Zz4=');
            background-position: top right;
            background-repeat: no-repeat;
            background-size: 50%;
            opacity: 0.2;
            z-index: 0;
        }

    .about-header-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
    }

        .about-header-content h1.display-4 {
            font-size: 3.5rem;
            line-height: 1.2;
            margin-bottom: 1rem;
        }

        .about-header-content p.fs-5 {
            font-size: 1.25rem;
            line-height: 1.5;
        }

    /* Star Animation */
    .galaxy-animation {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 0;
    }

    .star {
        position: absolute;
        width: 2px;
        height: 2px;
        background: white;
        border-radius: 50%;
        animation: twinkle 2s infinite;
    }

    @@keyframes twinkle {
        0%

    {
        opacity: 0.2;
    }

    50% {
        opacity: 1;
    }

    100% {
        opacity: 0.2;
    }

    }

    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 25px;
        font-weight: 700;
        color: var(--secondary-color);
    }

        .section-title::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -8px;
            width: 50px;
            height: 4px;
            background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            border-radius: 2px;
        }

    .content-card {
        background-color: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
    }

    .card-header {
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        padding: 20px;
        border-bottom: 1px solid #e5e7eb;
    }

    .card-body {
        padding: 20px;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 50rem;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .badge-admin {
        background-color: rgba(99, 102, 241, 0.1);
        color: var(--primary-color);
    }

    .badge-user {
        background-color: rgba(16, 185, 129, 0.1);
        color: var(--success-color);
    }

    .info-row {
        display: flex;
        border-bottom: 1px solid #f3f4f6;
        padding: 15px 0;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: 600;
        width: 200px;
        color: var(--secondary-color);
    }

    .info-value {
        flex: 1;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.25);
        }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.25);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #6B7280 0%, #4B5563 100%);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(107, 114, 128, 0.25);
        }

    .action-buttons {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    .email-link {
        color: var(--primary-color);
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .email-link:hover {
            color: var(--primary-hover);
            text-decoration: underline;
        }

    /* Table Styling */
    .table-container {
        margin-top: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th {
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
            padding: 12px 15px;
            text-align: left;
            font-weight: 600;
            color: var(--secondary-color);
            border-bottom: 1px solid #e5e7eb;
        }

        .table td {
            padding: 12px 15px;
            border-bottom: 1px solid #f3f4f6;
        }

        .table tr:last-child td {
            border-bottom: none;
        }

        .table tr:hover td {
            background-color: #f9fafb;
        }

    .empty-message {
        text-align: center;
        padding: 20px;
        color: #6B7280;
        font-style: italic;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .about-header-content h1.display-4

    {
        font-size: 2.5rem;
    }

    .info-row {
        flex-direction: column;
        gap: 5px;
    }

    .info-label {
        width: 100%;
    }

    .action-buttons {
        flex-direction: column;
    }

    }
</style>

<div class="container mt-5 mb-5">
    <!-- Header section -->
    <div class="about-header">
        <div class="galaxy-animation" id="stars-container"></div>
        <div class="about-header-content">
            <h1 class="display-4 fw-bold mb-4">User Details</h1>
            <p class="fs-5 mb-0">Viewing detailed information for @Model.User.UserName</p>
        </div>
    </div>

    <div class="content-card">
        <div class="card-header">
            <h2 class="section-title mb-0">Profile Information</h2>
        </div>
        <div class="card-body">
            <div class="info-row">
                <div class="info-label">Username</div>
                <div class="info-value">@Model.User.UserName</div>
            </div>
            <div class="info-row">
                <div class="info-label">Email</div>
                <div class="info-value">
                    <a href="mailto:@Model.User.Email" class="email-link">@Model.User.Email</a>
                </div>
            </div>
            <div class="info-row">
                <div class="info-label">Phone Number</div>
                <div class="info-value">
                    @(string.IsNullOrEmpty(Model.User.PhoneNumber) ? "Not provided" : Model.User.PhoneNumber)
                </div>
            </div>
           
            <div class="info-row">
                <div class="info-label">Roles</div>
                <div class="info-value">
                    @foreach (var role in Model.Roles)
                    {
                        @if (role == "Admin")
                        {
                            <span class="badge badge-admin">Administrator</span>
                        }
                        else
                        {
                            <span class="badge badge-user">@role</span>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Enrolled Courses -->
    <div class="content-card">
        <div class="card-header">
            <h2 class="section-title mb-0">Enrolled Courses</h2>
        </div>
        <div class="card-body">
            @if (Model.User.UserCourses?.Any() == true)
            {
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Course Name</th>
                               
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.User.UserCourses)
                            {
                                <tr>
                                    <td>@course.Course?.CourseName</td>
                                 
                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-message">
                    This user is not enrolled in any courses.
                </div>
            }
        </div>
    </div>

    <!-- Certificates -->
    <div class="content-card">
        <div class="card-header">
            <h2 class="section-title mb-0">Certificates</h2>
        </div>
        <div class="card-body">
            @if (Model.User.Certificates?.Any() == true)
            {
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Course</th>
                                <th>Issue Date</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cert in Model.User.Certificates)
                            {
                                <tr>
                                    <td>@cert.Course?.CourseName</td>
                                    <td>@cert.IssueDate.ToString("MMM dd, yyyy")</td>
                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-message">
                    This user has not earned any certificates.
                </div>
            }
        </div>
    </div>

    <!-- Comments -->
    <div class="content-card">
        <div class="card-header">
            <h2 class="section-title mb-0">Course Comments</h2>
        </div>
        <div class="card-body">
            @if (Model.User.Comments?.Any() == true)
            {
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Comment</th>
                                <th>Rating</th>
                                <th>Delete Comment</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in Model.User.Comments)
                            {
                                <tr>
                                    <td>@comment.CommentDate.ToString("MMM dd, yyyy")</td>
                                    <td>@comment.CommentText</td>
                                    <td>
                                        <div class="rating-stars">
                                            @for (int i = 0; i < comment.Rating; i++)
                                            {
                                                <i class="bi bi-star-fill" style="color: var(--warning-color);"></i>
                                            }
                                            @for (int i = comment.Rating; i < 5; i++)
                                            {
                                                <i class="bi bi-star" style="color: var(--warning-color);"></i>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Comment" asp-route-id="@comment.CommentID">
                                            <i class="bi bi-trash-fill me-2"></i>Delete Comment
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-message">
                    This user has not made any comments.
                </div>
            }
        </div>
    </div>

    <div class="action-buttons">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
        <form asp-controller="User" asp-action="Delete" asp-route-id="@Model.User.Id" method="post"
              onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
            <button type="submit" class="btn btn-danger btn-sm">
                <i class="bi bi-trash-fill me-1"></i> Delete
            </button>
        </form>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Create twinkling stars in the header
        const starsContainer = document.getElementById('stars-container');
        const starCount = 100;

        for (let i = 0; i < starCount; i++) {
            const star = document.createElement('div');
            star.className = 'star';
            star.style.top = `${Math.random() * 100}%`;
            star.style.left = `${Math.random() * 100}%`;
            star.style.animationDelay = `${Math.random() * 2}s`;
            starsContainer.appendChild(star);
        }
    });
</script>
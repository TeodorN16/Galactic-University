@model GalacticUniversity.Models.ViewModels.CourseViewModels.CourseProgressViewModel

@{
    ViewData["Title"] = Model?.Course?.CourseName ?? "Course";
    var lectureCount = Model?.Course?.Lectures?.Count ?? 1;
    var progressPerLecture = lectureCount > 0 ? (100.0 / lectureCount) : 0;
    var completedLectures = Model.LastLectureID.HasValue
        ? Model.Course.Lectures.Count(l => l.LectureID <= Model.LastLectureID)
        : 0;
    var progress = completedLectures * progressPerLecture;
}

<link rel="stylesheet" href="~/css/display.css" asp-append-version="true" />

<div class="container mt-4">
    <!-- Course Header -->
    <div class="mb-4 p-4 bg-light border rounded">
        <h1 class="fw-bold text-primary">@Model.Course.CourseName</h1>
        <p>@Model.Course.Description</p>
        <div class="d-flex align-items-center">
            <span class="badge bg-info text-dark me-2">@Model.Course.Lectures.Count Lectures</span>
            <a href="/Profile" class="btn btn-outline-secondary btn-sm ms-auto">
                <i class="bi bi-arrow-left me-1"></i> Back to Profile
            </a>
        </div>
    </div>

    <!-- Progress Bar -->
    <div class="mb-4">
        <label class="fw-bold mb-1">Progress</label>
        <div class="progress">
            <div id="progressBar"
            class="progress-bar progress-bar-striped bg-success"
            role="progressbar"
            style="width: @progress%"
            aria-valuenow="@progress"
            aria-valuemin="0"
            aria-valuemax="100">
                @($"{progress:F0}%")
            </div>
        </div>
    </div>
    <div class="accordion" id="lectureAccordion">
        @foreach (var item in Model.Course.Lectures)
        {
            var collapseId = $"collapse-{item.LectureID}"; // Unique ID for each collapse
            var headingId = $"heading-{item.LectureID}"; // Unique ID for each heading

            <div class="accordion-item">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#@collapseId"
                            aria-expanded="false"
                            aria-controls="@collapseId">
                        @item.LectureName <!-- Use the lecture name dynamically -->
                    </button>
                </h2>
                <div id="@collapseId"
                     class="accordion-collapse collapse"
                     aria-labelledby="@headingId">
                    <!-- Accordion body content -->
                    <div class="accordion-body">
                        <strong>This is the accordion body for @item.LectureName.</strong>
                        <!-- Add your dynamic content here -->
                        @if (item.LectureResources?.Any() == true)
                        {
                            <ul class="list-group">
                                @foreach (var resource in item.LectureResources)
                                {
                                    <li class="list-group-item">
                                        @if (!string.IsNullOrEmpty(resource.FileUrl) && resource.FileUrl.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <iframe src="@resource.FileUrl" width="100%" height="300px" style="border:none;"></iframe>
                                            <a href="@resource.FileUrl" target="_blank" class="btn btn-link btn-sm">Open in New Tab</a>
                                        }
                                        else
                                        {
                                            <span>No PDF available.</span>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No resources available.</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap JS (required for accordion functionality) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

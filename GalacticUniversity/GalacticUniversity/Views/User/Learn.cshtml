@model GalacticUniversity.Models.Course

@{
    ViewData["Title"] = Model?.CourseName ?? "Course";
}

<link rel="stylesheet" href="~/css/display.css" asp-append-version="true" />

<div class="container mt-4">
    <!-- Course Header -->
    <div class="mb-4 p-4 bg-light border rounded">
        <h1 class="fw-bold text-primary">@(Model?.CourseName ?? "Unnamed Course")</h1>
        <p class="text-dark">@(Model?.Description ?? "No description available.")</p>
        <div class="d-flex align-items-center">
            <span class="badge bg-info text-dark me-2">@(Model?.Lectures?.Count ?? 0) Lectures</span>
            <a href="/Profile" class="btn btn-outline-secondary btn-sm ms-auto">
                <i class="bi bi-arrow-left me-1"></i> Back to Profile
            </a>
        </div>
    </div>

    <!-- Lectures Section -->
    <h3 class="text-secondary mb-3">Course Content</h3>

    @if (Model?.Lectures != null && Model.Lectures.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 g-4 mb-4">
            @{
                var lecturesList = Model.Lectures.ToList();
                var halfCount = (int)Math.Ceiling(lecturesList.Count / 2.0);

                for (int i = 0; i < halfCount; i++)
                {
                    var lecture = lecturesList[i];
                    var lectureId = lecture.LectureID;
                    var headingId = $"heading-{lectureId}";
                    var collapseId = $"collapse-{lectureId}";

                    <div class="col">
                        <div class="accordion" id="accordion-lecture-@lectureId">
                            <div class="accordion-item border mb-3 shadow-sm">
                                <h2 class="accordion-header" id="@headingId">
                                    <button class="accordion-button collapsed" type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#@collapseId"
                                            aria-expanded="false"
                                            aria-controls="@collapseId">
                                        <span class="me-2">@(lecture?.LectureName ?? "Unnamed Lecture")</span>
                                        <i class="bi bi-unlock-fill text-success ms-auto"></i>
                                    </button>
                                </h2>
                                <div id="@collapseId" class="accordion-collapse collapse"
                                     aria-labelledby="@headingId">
                                    <div class="accordion-body">
                                        @if (lecture?.LectureResources != null && lecture.LectureResources.Any())
                                        {
                                            <ul class="list-group list-group-flush">
                                                @foreach (var resource in lecture.LectureResources)
                                                {
                                                    <li class="list-group-item">
                                                        @if (!string.IsNullOrEmpty(resource?.FileUrl) && resource.FileUrl.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                                                        {
                                                            <div class="embed-responsive embed-responsive-16by9 mb-3">
                                                                <iframe class="embed-responsive-item"
                                                                        src="@resource.FileUrl"
                                                                        style="width: 100%; height: 300px; border: none;"
                                                                        title="Lecture Resource PDF"></iframe>
                                                            </div>
                                                            <a href="@resource.FileUrl" target="_blank" class="btn btn-link btn-sm">Open in New Tab</a>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">No PDF available.</span>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <p class="text-muted">No resources available for this lecture.</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            @{
                for (int i = halfCount; i < lecturesList.Count; i++)
                {
                    var lecture = lecturesList[i];
                    var lectureId = lecture.LectureID;
                    var headingId = $"heading-{lectureId}";
                    var collapseId = $"collapse-{lectureId}";

                    <div class="col">
                        <div class="accordion" id="accordion-lecture-@lectureId">
                            <div class="accordion-item border mb-3 shadow-sm">
                                <h2 class="accordion-header" id="@headingId">
                                    <button class="accordion-button collapsed" type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#@collapseId"
                                            aria-expanded="false"
                                            aria-controls="@collapseId">
                                        <span class="me-2">@(lecture?.LectureName ?? "Unnamed Lecture")</span>
                                        <i class="bi bi-unlock-fill text-success ms-auto"></i>
                                    </button>
                                </h2>
                                <div id="@collapseId" class="accordion-collapse collapse"
                                     aria-labelledby="@headingId">
                                    <div class="accordion-body">
                                        @if (lecture?.LectureResources != null && lecture.LectureResources.Any())
                                        {
                                            <ul class="list-group list-group-flush">
                                                @foreach (var resource in lecture.LectureResources)
                                                {
                                                    <li class="list-group-item">
                                                        @if (!string.IsNullOrEmpty(resource?.FileUrl) && resource.FileUrl.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                                                        {
                                                            <div class="embed-responsive embed-responsive-16by9 mb-3">
                                                                <iframe class="embed-responsive-item"
                                                                        src="@resource.FileUrl"
                                                                        style="width: 100%; height: 300px; border: none;"
                                                                        title="Lecture Resource PDF"></iframe>
                                                            </div>
                                                            <a href="@resource.FileUrl" target="_blank" class="btn btn-link btn-sm">Open in New Tab</a>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">No PDF available.</span>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <p class="text-muted">No resources available for this lecture.</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No lectures available for this course.
        </div>
    }
</div>

<!-- Footer -->
<footer class="footer-full mt-5">
    <div class="footer-left">
        <div class="astronaut">
            <div class="head"></div>
            <div class="arm arm-left"></div>
            <div class="arm arm-right"></div>
            <div class="body">
                <div class="panel"></div>
            </div>
            <div class="leg leg-left"></div>
            <div class="leg leg-right"></div>
            <div class="schoolbag"></div>
        </div>
    </div>
    <div class="footer-right">
        <p>© 2025 GalacticUniversity. All rights reserved.</p>
        <div>
            <a href="#">Privacy Policy</a>
            <a href="#">Terms of Service</a>
            <a href="#">Contact</a>
        </div>
    </div>
</footer>


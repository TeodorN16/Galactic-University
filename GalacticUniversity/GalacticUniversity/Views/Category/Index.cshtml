@{
}
@model IEnumerable<GalacticUniversity.Models.Category>

<table class="table">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">CategoryName</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@item.CategoryID</th>
				<td>@item.CategoryName</td>
				<td>
					<a type="submit" class="btn btn-primary" asp-action="Edit" asp-controller="Category" asp-route-id="@item.CategoryID">Edit</a>

					<form asp-action="Delete" asp-controller="Category" asp-route-id="@item.CategoryID" method="post" style="display:inline;">
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</td>
			</tr>
		}


	</tbody>
</table>
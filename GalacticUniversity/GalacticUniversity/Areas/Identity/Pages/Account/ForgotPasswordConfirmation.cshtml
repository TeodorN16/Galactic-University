@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Galactic University</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <!-- Background with stars and shooting stars -->
    <section class="bg-stars">
        <span class="star"></span>
        <span class="star"></span>
        <span class="star"></span>
        <span class="star"></span>
        <span class="shooting-star"></span>
        <span class="shooting-star"></span>

        <!-- Decorative planets -->
        <div class="planet planet-1"></div>
        <div class="planet planet-2"></div>
    </section>

    <!-- Main content container -->
    <div class="page-container">
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="form">
                <div class="form-title">
                    <span>Password Reset</span>
                </div>
                <div class="title-2">
                    <span>GALACTIC UNIVERSITY</span>
                </div>
                <div class="confirmation-message">
                    <p>Please check your email to reset your password.</p>
                </div>
                <p class="signup-link mt-4">
                    <a asp-page="./Login" class="back-home">← Back to Login</a>
                </p>
                <p class="signup-link">
                    <a href="/" class="back-home">← Back to Home</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add more stars dynamically for a better effect
            const starsContainer = document.querySelector('.bg-stars');
            const starCount = 150; // Increased number of stars

            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('span');
                star.className = 'star';
                star.style.top = `${Math.random() * 100}%`;
                star.style.left = `${Math.random() * 100}%`;
                star.style.animationDelay = `${Math.random() * 5}s`;
                // Vary the size slightly
                const size = 1 + Math.random() * 2;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                starsContainer.appendChild(star);
            }

            // Add subtle entrance animations to elements
            const messageContainer = document.querySelector('.confirmation-message');
            const links = document.querySelectorAll('.signup-link');

            messageContainer.style.opacity = '0';
            messageContainer.style.transform = 'translateY(20px)';
            messageContainer.style.transition = 'all 0.3s ease';
            messageContainer.style.transitionDelay = '0.2s';

            setTimeout(() => {
                messageContainer.style.opacity = '1';
                messageContainer.style.transform = 'translateY(0)';
            }, 100);

            links.forEach((link, index) => {
                link.style.opacity = '0';
                link.style.transform = 'translateY(20px)';
                link.style.transition = 'all 0.3s ease';
                link.style.transitionDelay = `${0.3 + index * 0.1}s`;

                setTimeout(() => {
                    link.style.opacity = '1';
                    link.style.transform = 'translateY(0)';
                }, 100);
            });
        });
    </script>
</body>
</html>